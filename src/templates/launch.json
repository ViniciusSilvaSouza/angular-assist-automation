{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ðŸ”¥ Chrome Debug - [NOME_PROJETO]",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:${config:angular-assist.automation.[NOME_PROJETO].port}${config:angular-assist.automation.[NOME_PROJETO].route}",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-[NOME_PROJETO]",
            "runtimeArgs": [
                "--new-window",
                "--no-first-run",
                "--no-default-browser-check",
                "--disable-sync",
                "--disable-extensions",
                "--remote-debugging-port=${config:angular-assist.automation.[NOME_PROJETO].debugPort}",
                "--force-device-scale-factor=1"
            ],
            "preLaunchTask": "Start Projeto - [NOME_PROJETO] (Angular Assist)",
            "presentation": {
                "hidden": false,
                "group": "Angular Assist",
                "order": 1
            }
        }
    ]
}
